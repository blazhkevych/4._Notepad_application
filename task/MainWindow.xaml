<Window x:Class="task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task"
        mc:Ignorable="d"
        Title="No name - Notepad" Height="450" Width="800">

    <FrameworkElement.Resources>
        <RoutedUICommand x:Key="NewWindow" Text="New window"/>
    </FrameworkElement.Resources>
    <FrameworkElement.CommandBindings>
        <CommandBinding Command="New" CanExecute="NewCommand_CanExecute" Executed="NewCommand_Executed"/>
        <CommandBinding Command="{StaticResource NewWindow}" CanExecute="NewWIndowCommand_CanExecute" Executed="NewWindowCommand_Executed"/>
    </FrameworkElement.CommandBindings>

    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="New" Command="New" />
                    <MenuItem Header="New window" Command="{StaticResource NewWindow}"/>
                    <MenuItem Header="Open" />
                    <MenuItem Header="Save" />
                    <MenuItem Header="Save as" />
                    <Separator />
                    <MenuItem Header="Page setup" />
                    <MenuItem Header="Print" />
                    <Separator />
                    <MenuItem Header="Exit" />
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Cut" />
                    <MenuItem Header="Copy" />
                    <MenuItem Header="Insert" />
                    <MenuItem Header="Delete" />
                    <Separator />
                    <MenuItem Header="Find" />
                    <MenuItem Header="Find next" />
                    <MenuItem Header="Find earlier" />
                    <MenuItem Header="Replace" />
                    <MenuItem Header="Go" />
                    <Separator />
                    <MenuItem Header="Choose all" />
                    <MenuItem Header="Time and date" />
                </MenuItem>
                <MenuItem Header="View">
                    <MenuItem Header="Scale">
                        <MenuItem Header="Increase" />
                        <MenuItem Header="Decrease" />
                        <MenuItem Header="Restore default scale" />
                    </MenuItem>
                    <MenuItem Header="Status bar" />
                    <MenuItem Header="World wrap" />
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" Name="TxtEditor" />
        </DockPanel>
    </Grid>
</Window>
